bwa aln -n 0 -t 24 tx_tair10rep.fasta deg_${SGE_TASK_ID}.fasta > ./bwa/deg_${SGE_TASK_ID}.sai
bwa samse -n 0 tx_tair10rep.fasta ./bwa/deg_${SGE_TASK_ID}.sai deg_${SGE_TASK_ID}.fasta > ./bwa/deg_${SGE_TASK_ID}.sam

